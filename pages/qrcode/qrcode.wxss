.container {
  padding: 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: linear-gradient(135deg, #f5f7fa 0%, #e4e8eb 100%);
  min-height: 100vh;
}

.card {
  width: calc(100% - 40px);
  max-width: 500px;
  margin: 0 20px 25px;
  background: white;
  border-radius: 16px;
  box-shadow: 0 10px 30px rgba(0,0,0,0.08);
  overflow: hidden;
}

.card-content {
  padding: 20px;
}

.qr-input {
  width: 100%;
  min-height: 100px;
  padding: 12px 15px;
  margin-bottom: 20px;
  border: 1px solid #e0e0e0;
  border-radius: 8px;
  font-size: 16px;
  transition: border-color 0.3s;
  box-sizing: border-box;
}

.qr-input:focus {
  border-color: #07C160;
  outline: none;
}

.size-control {
  width: 100%;
  margin-bottom: 20px;
}

.size-control text {
  display: block;
  margin-bottom: 10px;
  color: #333;
  font-size: 14px;
}

.qr-preview {
  margin: 30px 20px 0;
  text-align: center;
  background: white;
  padding: 20px;
  border-radius: 16px;
  box-shadow: 0 10px 30px rgba(0,0,0,0.08);
  width: calc(100% - 40px);
  max-width: 500px;
}

.qr-preview image {
  max-width: 100%;
  height: auto;
  border: 1px solid #f0f0f0;
  margin-bottom: 20px;
  border-radius: 8px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
}

.input-section {
  border-radius: 8px;
  padding: 0;
  overflow: hidden;
}

.mode-switch {
  display: flex;
  background: #f8f9fa;
  padding: 10px 15px;
  border-bottom: 1px solid #eee;
  justify-content: center;
}

.mode-tab {
  flex: none;
  width: 140px;
  text-align: center;
  padding: 10px 12px;
  margin: 0 5px;
  background: #f0f0f0;
  color: #666;
  border-radius: 20px;
  font-size: 14px;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
}

.mode-tab .tab-icon {
  width: 18px;
  height: 18px;
  margin-right: 6px;
}

.mode-tab.active {
  background: #07C160;
  color: white;
  font-weight: bold;
  box-shadow: 0 2px 10px rgba(7,193,96,0.3);
}

.mode-tab.active .tab-icon {
  filter: brightness(0) invert(1);
}

.wifi-form {
  width: 100%;
  box-sizing: border-box;
}

.form-item {
  margin-bottom: 15px;
  width: 100%;
  box-sizing: border-box;
}

.form-item .label {
  display: block;
  margin-bottom: 8px;
  color: #333;
  font-size: 14px;
}

.form-item input {
  width: 100%;
  padding: 0 15px;
  border: 1px solid #e0e0e0;
  border-radius: 8px;
  background: white;
  font-size: 15px;
  transition: all 0.3s ease;
  box-sizing: border-box;
  height: 48px;
  line-height: 48px;
}

.form-item picker {
  width: 100%;
  padding: 12px 15px;
  border: 1px solid #e0e0e0;
  border-radius: 8px;
  background: white;
  font-size: 15px;
  transition: all 0.3s ease;
  box-sizing: border-box;
  height: 48px;
}

.form-item input:focus,
.form-item picker:active {
  border-color: #07C160;
  box-shadow: 0 0 0 2px rgba(7,193,96,0.2);
}

.form-item picker view {
  padding: 0;
  height: 24px;
  line-height: 24px;
}


button {
  background-color: #07C160;
  color: white;
  border: none;
  border-radius: 8px;
  padding: 14px 0;
  font-size: 16px;
  font-weight: 500;
  width: 100%;
  margin-top: 10px;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

button::after {
  content: "";
  position: absolute;
  top: 50%;
  left: 50%;
  width: 5px;
  height: 5px;
  background: rgba(255,255,255,0.5);
  opacity: 0;
  border-radius: 100%;
  transform: scale(1, 1) translate(-50%, -50%);
  transform-origin: 50% 50%;
}

button:active {
  transform: scale(0.98);
}

button:active::after {
  animation: ripple 0.6s ease-out;
}

@keyframes ripple {
  0% {
    transform: scale(0, 0);
    opacity: 0.5;
  }
  20% {
    transform: scale(25, 25);
    opacity: 0.3;
  }
  100% {
    opacity: 0;
    transform: scale(40, 40);
  }
}

.button-hover {
  opacity: 0.9;
  box-shadow: 0 2px 10px rgba(7,193,96,0.3);
}