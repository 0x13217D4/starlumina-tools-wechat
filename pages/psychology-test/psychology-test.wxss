.container {
  padding: 20px;
}

.header {
  margin-bottom: 30px;
  text-align: center;
  font-size: 18px;
  font-weight: bold;
}

.scale-list {
  display: flex;
  flex-direction: column;
  gap: 15px;
}

.scale-item {
  padding: 15px;
  background-color: #f5f5f5;
  border-radius: 8px;
}

.scale-name {
  font-size: 16px;
  font-weight: bold;
  display: block;
  margin-bottom: 5px;
}

.scale-desc {
  font-size: 14px;
  color: #666;
  display: block;
  margin-bottom: 5px;
}

.scale-count {
  font-size: 12px;
  color: #999;
  display: block;
}