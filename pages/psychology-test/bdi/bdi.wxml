<view class="container">
  <!-- 测试进度 -->
  <view class="progress">
    <text>问题 {{currentQuestion + 1}}/{{questions.length}}</text>
  </view>
  
  <!-- 当前问题 -->
  <view class="question" wx:if="{{!result}}">
    <text>{{questions[currentQuestion].text}}</text>
  </view>
  
  <!-- 选项列表 -->
  <view class="options" wx:if="{{!result}}">
    <block wx:for="{{questions[currentQuestion].options}}" wx:key="id">
      <button bindtap="selectOption" data-index="{{index}}">{{item.text}}</button>
    </block>
  </view>
  
  <!-- 测试结果 -->
  <view class="result" wx:if="{{result}}">
    <view class="result-header">
      <text class="result-title">测试结果: {{result.level}}</text>
      <text class="total-score">总分: {{totalScore}}</text>
    </view>
    
    <view class="description">
      <text>{{result.description}}</text>
    </view>
    
    <button class="restart-btn" bindtap="restartTest">重新测试</button>
  </view>
</view>