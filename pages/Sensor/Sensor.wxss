.container {
  padding: 20rpx 0;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 控制面板 */
.control-panel {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
  padding: 0 20rpx;
}

.control-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: bold;
  border: none;
}

.start-btn {
  background: linear-gradient(135deg, #07C160, #00d4aa);
  color: white;
}

.stop-btn {
  background: linear-gradient(135deg, #FF6B6B, #ff8787);
  color: white;
}

.reset-btn {
  background: linear-gradient(135deg, #4A90E2, #6BA5E8);
  color: white;
}

.control-btn:active {
  transform: scale(0.98);
  opacity: 0.8;
}

/* 三维坐标轴 */
.axis-container {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin: 0 20rpx 20rpx 20rpx;
  width:80%;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.axis-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  text-align: center;
}

.axis-display {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.axis-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 10rpx;
  border-radius: 12rpx;
  background: linear-gradient(135deg, #f8f9fa, #e9ecef);
}

.x-axis {
  background: linear-gradient(135deg, #ffebee, #ffcdd2);
  border: 2rpx solid #f44336;
}

.y-axis {
  background: linear-gradient(135deg, #e8f5e8, #c8e6c9);
  border: 2rpx solid #4CAF50;
}

.z-axis {
  background: linear-gradient(135deg, #e3f2fd, #bbdefb);
  border: 2rpx solid #2196F3;
}

.axis-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
  font-weight: bold;
}

.axis-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  font-family: 'Courier New', monospace;
}

/* 信息卡片 */
.info-card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin: 0 20rpx 20rpx 20rpx;
  width:80%;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  text-align: center;
  position: relative;
  padding-bottom: 15rpx;
}

.card-title::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: linear-gradient(90deg, #07C160, #00d4aa);
  border-radius: 2rpx;
}

.info-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.info-item {
  text-align: center;
  padding: 20rpx;
  border-radius: 12rpx;
  background: #f8f9fa;
  border: 1rpx solid #e9ecef;
}

.info-item.highlight {
  background: linear-gradient(135deg, #fff3e0, #ffe0b2);
  border: 2rpx solid #FF9800;
}

.info-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.info-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  font-family: 'Courier New', monospace;
}

.info-item.highlight .info-value {
  color: #FF9800;
}

/* 距离显示 */
.distance-display {
  text-align: center;
  padding: 30rpx;
  background: linear-gradient(135deg, #f3e5f5, #e1bee7);
  border-radius: 12rpx;
  border: 2rpx solid #9C27B0;
}

.distance-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #9C27B0;
  font-family: 'Courier New', monospace;
}

/* 状态指示器 */
.status-indicator {
  position: fixed;
  top: 60rpx;
  right: 20rpx;
  display: flex;
  align-items: center;
  gap: 10rpx;
  padding: 12rpx 20rpx;
  border-radius: 20rpx;
  background: rgba(255, 255, 255, 0.9);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
}

.status-indicator.active {
  background: rgba(76, 175, 80, 0.9);
}

.status-indicator.inactive {
  background: rgba(158, 158, 158, 0.9);
}

.status-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: #ccc;
  animation: pulse 2s infinite;
}

.status-indicator.active .status-dot {
  background: #4CAF50;
}

.status-indicator.inactive .status-dot {
  background: #9e9e9e;
  animation: none;
}

@keyframes pulse {
  0% {
    opacity: 1;
    transform: scale(1);
  }
  50% {
    opacity: 0.6;
    transform: scale(1.2);
  }
  100% {
    opacity: 1;
    transform: scale(1);
  }
}

.status-text {
  font-size: 24rpx;
  color: #333;
  font-weight: bold;
}

.status-indicator.active .status-text {
  color: white;
}

.status-indicator.inactive .status-text {
  color: white;
}