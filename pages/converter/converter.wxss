.container {
  padding: 20px;
}

.input-group {
  margin-bottom: 20px;
}

.picker {
  border: 1px solid #ddd;
  padding: 10px;
  margin-bottom: 10px;
  border-radius: 4px;
}

input {
  border: 1px solid #ddd;
  padding: 0 15px;
  width: 100%;
  box-sizing: border-box;
  border-radius: 4px;
  height: 50px;
  font-size: 16px;
  line-height: 50px;
}

button {
  background-color: #07C160;
  color: white;
  border: none;
  padding: 12px;
  width: 100%;
  border-radius: 4px;
  margin-top: 20px;
}

.error {
  color: #FF4D4F;
  margin-top: 10px;
  font-size: 14px;
}