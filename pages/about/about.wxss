.container {
  padding: 20rpx;
  background-color: #f7f7f7;
  min-height: 100vh;
}

.info-list {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 0 30rpx;
  margin: 0 20rpx 40rpx;
  width: calc(100% - 40rpx);
  box-sizing: border-box;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.app-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0 20rpx;
}

.app-logo {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
  border-radius: 24rpx;
}

.app-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.logo {
  display: flex;
  justify-content: center;
  padding: 60rpx 0;
}

.logo image {
  width: 200rpx;
  height: 200rpx;
  opacity: 0.8;
}

.info-item {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  position: relative;
}

.info-item:last-child {
  border-bottom: none;
}

.label {
  font-size: 32rpx;
  color: #333;
  flex: 1;
}

.value {
  font-size: 32rpx;
  color: #666;
}

.arrow {
  width: 32rpx;
  height: 32rpx;
}

.footer {
  margin-top: 40rpx;
  text-align: center;
  padding: 20rpx 0;
}

.footer-text {
  font-size: 24rpx;
  color: #999;
  display: block;
  margin-bottom: 8rpx;
}

.copyright-text {
  font-size: 24rpx;
  color: #999;
  display: block;
}