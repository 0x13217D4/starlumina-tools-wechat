.container {
  padding: 20px;
}

.picker {
  border: 1px solid #ddd;
  padding: 15px;
  margin-bottom: 20px;
  border-radius: 4px;
}

.conversion-area {
  margin-bottom: 20px;
}

.input-group, .result-group {
  display: flex;
  margin-bottom: 15px;
}

input {
  border: 1px solid #ddd;
  padding: 0 15px;
  flex: 1;
  height: 50px;
  font-size: 16px;
  line-height: 50px;
  border-radius: 4px 0 0 4px;
}

.unit-picker {
  border: 1px solid #ddd;
  border-left: none;
  padding: 0 15px;
  width: 100px;
  height: 50px;
  line-height: 50px;
  text-align: center;
  border-radius: 0 4px 4px 0;
}

.equals-sign {
  text-align: center;
  font-size: 24px;
  margin: 10px 0;
}

button {
  background-color: #07C160;
  color: white;
  border: none;
  padding: 12px;
  width: 100%;
  border-radius: 4px;
  margin-top: 20px;
}

.error {
  color: #FF4D4F;
  margin-top: 10px;
  font-size: 14px;
  text-align: center;
}