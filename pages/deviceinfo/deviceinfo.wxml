<!-- 设备信息页面 - 主容器 -->
<view class="container">
  
  <!-- 1. 基本信息卡片 -->
  <view class="info-card">
    <view class="info-title">基本信息</view>
    <view 
      class="info-item" 
      wx:for="{{basicInfo}}" 
      wx:for-item="value" 
      wx:for-index="key" 
      wx:key="key"
    >
      <view class="info-label">{{displayInfo[key]}}：</view>
      <view class="info-value">{{value}}</view>
    </view>
  </view>

  <!-- 2. 屏幕信息卡片 -->
  <view class="info-card">
    <view class="info-title">屏幕信息</view>
    <view 
      class="info-item" 
      wx:for="{{screenInfo}}" 
      wx:for-item="value" 
      wx:for-index="key" 
      wx:key="key"
    >
      <view class="info-label">{{displayInfo[key]}}：</view>
      <view class="info-value">{{value}}</view>
    </view>
  </view>

  <!-- 3. 权限状态卡片 -->
  <view class="info-card">
    <view class="info-title">权限状态</view>
    <view 
      class="info-item {{value === '未请求' ? 'clickable' : ''}}" 
      wx:for="{{authInfo}}" 
      wx:for-item="value" 
      wx:for-index="key" 
      wx:key="key"
      bindtap="onAuthItemTap"
      data-key="{{key}}"
    >
      <view class="info-label">{{displayInfo[key]}}：</view>
      <view class="info-value">{{value}}</view>
    </view>
  </view>

  <!-- 4. 性能信息卡片 -->
  <view class="info-card">
    <view class="info-title">性能信息</view>
    <view 
      class="info-item" 
      wx:for="{{performanceInfo}}" 
      wx:for-item="value" 
      wx:for-index="key" 
      wx:key="key"
    >
      <view class="info-label">{{displayInfo[key]}}：</view>
      <view class="info-value">{{value}}</view>
    </view>
  </view>

  <!-- 5. 电量信息卡片 -->
  <view class="info-card">
    <view class="info-title">电量信息</view>
    <view 
      class="info-item" 
      wx:for="{{batteryInfo}}" 
      wx:for-item="value" 
      wx:for-index="key" 
      wx:key="key"
    >
      <view class="info-label">{{displayInfo[key]}}：</view>
      <view class="info-value">{{value}}</view>
    </view>
  </view>
</view>
